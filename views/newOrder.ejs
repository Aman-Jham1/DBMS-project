<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/lykmapipo/themify-icons@0.1.2/css/themify-icons.css">
    <link rel="stylesheet" href="/css/dash.css">
    <link rel="stylesheet" href="/css/select2.css">
    <link rel="stylesheet" href="/css/newOrder.css">
    <script src="/js/selectscript.js" defer></script>
</head>

<body>
    <input type="checkbox" id="sidebar-toggle">
    <div class="sidebar">
        <div class="sidebar-header">
            <h3 class="brand">
                <span class="ti-unlink"></span>
                <span>dbmsproject</span>
            </h3>
            <label for="sidebar-toggle" class="ti-menu-alt"></label>
        </div>

        <div class="sidebar-menu">
            <ul>
                <li>
                    <a href="/dashboard">
                        <span class="ti-home"></span>
                        <span>Home</span>
                    </a>
                </li>


                <li>
                    <a href="/dashboard/orders">
                        <span class="ti-clipboard"></span>
                        <span>Orders</span>
                    </a>
                </li>
                <li>
                    <a href="/dashboard/customers">
                        <span class="ti-folder"></span>
                        <span>Customers</span>
                    </a>
                </li>
                <li>
                    <a href="/dashboard/staff_management">
                        <span class="ti-time"></span>
                        <span>Staff Management</span>
                    </a>
                </li>
                <li>
                    <a href="/dashboard/profile">
                        <span class="ti-id-badge"></span>
                        <span>Profile</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <div class="main-content">

        <header>

            <h2 class="dash-welcome">Welcome, User123</h2>

            <div class="social-icons">
                <span class="ti-user"></span>

            </div>
        </header>

        <main>
            <h2 class="dash-title">New Order</h2>
            <form action="" class="form-new-order">
                <select data-custom name="customer" class="customer">
                    <option value="-">Select customer</option>
                    <% for(let i=0; i < customers.length; i++) { %>
                        <option value="<%= customers[i].id %>">
                            <%= customers[i].name %>
                        </option>
                        <% } %>
                </select>


                <select data-custom name="dish" class="dish">
                    <option value="-">Select dish</option>
                    <% for(let i=0; i < dishes.length; i++) { %>
                        <option value="<%= dishes[i].id %>">
                            <%= dishes[i].name %>
                        </option>
                        <% } %>
                </select>

                <button class="btn btn-primary">Add new customer</button>

                <label for="qty" class="labelqty">Quantity</label>
                <input type="number" min="1" class="qty" placeholder="quantity" name="quantity">

                <label for="seat" class="labelseat">Seat no</label>
                <input type="number" placeholder="Seat No" name="seat" class="seat">

                <button type="submit" class="btn btn-primary">Submit Order</button>
            </form>

        </main>


</body>

</html>