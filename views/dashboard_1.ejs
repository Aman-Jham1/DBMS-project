<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/lykmapipo/themify-icons@0.1.2/css/themify-icons.css">
    <link rel="stylesheet" href="/css/dash.css">
    <script src="/js/dash.js" defer></script>
</head>

<body>

    <%- include('partials/sidebar'); %>


        <div class="main-content">

            <header>

                <h2 class="dash-welcome">Welcome, <%=name%>
                </h2>

                <div class="social-icons">
                    <a href="/dashboard/profile"> <span class="ti-user"></span></a>

                </div>
            </header>

            <main>

                <h2 class="dash-title">Overview</h2>

                <div class="dash-cards">
                    <div class="card-single">
                        <div class="card-body">
                            <span class="ti-check-box"></span>
                            <div>
                                <h5>Total Orders Today</h5>
                                <h4>
                                    <%=orderstoday.length%>
                                </h4>
                            </div>
                        </div>
                        <div class="card-footer">
                            <a href="/dashboard/orders">View All Orders</a>
                        </div>
                    </div>

                    <div class="card-single">
                        <div class="card-body">
                            <span class="ti-reload"></span>
                            <div>
                                <h5>Open Orders</h5>

                                <h4>
                                    <%=openOrder.length%>
                                </h4>

                                </h4>
                            </div>

                        </div>
                        <div class="card-footer">
                            <a href="/dashboard/open-orders">View Open Orders</a>
                        </div>



                    </div>
                    <div class="card-single">
                        <div class="card-body">
                            <span class=ti-money></span>
                            <div>
                                <h5>Total Sales Today</h5>
                                <h4>â‚¹ <%=totalSalesToday[0].todaySales || 0%>
                                </h4>
                            </div>
                        </div>
                        <div class="card-footer">
                            <a href="/dashboard/sold-orders">View All Completed Orders</a>
                        </div>
                    </div>
                </div>


                <section class="recent">
                    <div class="activity-grid">
                        <div class="activity-card">
                            <h3>Recent Pending Orders(2hrs)</h3>
                            <div class="table-responsive">
                                <table>
                                    <thead>
                                        <tr>
                                            <th>Order ID</th>
                                            <th>Customer Name</th>
                                            <th>Order items</th>
                                            <th>Time Ordered</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for(let i=0; i< dashboardDetails.length; i++) { %>
                                            <tr>
                                                <td>
                                                    <%=dashboardDetails[i].ord_id%>
                                                </td>
                                                <td>
                                                    <%=dashboardDetails[i].customerName%>
                                                </td>
                                                <td>
                                                    <% for( let j=0; j < orderdishes.length; j++ ) { %>
                                                        <% if(dashboardDetails[i].ord_id===orderdishes[j].ord_id ){ %>

                                                            <%=orderdishes[j].name%> (X<%=orderdishes[j].quantity%>)<br>

                                                                    <% } %>

                                                                        <% } %>
                                                </td>
                                                <td>
                                                    <span class="timeOrder">
                                                        <%=dashboardDetails[i].time_ordered%>
                                                    </span>
                                                </td>

                                                <td>
                                                    <div class="button-group" data-order-btns
                                                        data-orderid="<%=dashboardDetails[i].ord_id%>">
                                                        <button class="btn-primary">Deliver</button>
                                                        <button class="btn-danger">Cancel</button>
                                                    </div>
                                                </td>
                                            </tr>
                                            <% } %>





                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="summary">
                            <div class="summary-card">
                                <div class="summary-single">
                                    <span class="ti-id-badge"></span>
                                    <div>
                                        <h5>
                                            <%=employees.length %>
                                        </h5>
                                        <small>Number of staff</small>
                                    </div>
                                </div>

                                <div class="summary-single">
                                    <span class="ti-face-smile"></span>
                                    <div>
                                        <h5>
                                            <%=orders.length %>
                                        </h5>
                                        <small>Total Orders Served by us</small>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    <a class="btn-primary" href="/dashboard/newOrder">
                        Add order
                    </a>
        </div>
        </section>

        </main>

        </div>

</body>

</html>