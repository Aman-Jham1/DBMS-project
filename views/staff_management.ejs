<body>
    <%- include('partials/sidebar', { isAdmin }); %>

        <div class="main-content">

            <%- include('partials/top', { name }) %>


                <main>
                    <div class="activity-card">
                        <h3>Our Staff</h3>

                        <div class="table-responsive">

                            <table>
                                <thead>
                                    <tr>
                                        <th>Staff ID</th>
                                        <th>Staff Name</th>
                                        <th>Designation</th>
                                        <th>Salary</th>
                                        <th>Contact Number</th>
                                        <th>Email Address</th>
                                    </tr>
                                </thead>


                                <% for( let i=0; i < staff.length; i++ ) { %>
                                    <tr>
                                        <td>
                                            <%= staff[i].eid %>
                                        </td>
                                        <td>
                                            <%=staff[i].name%>
                                        </td>
                                        <td>
                                            <%=staff[i].designation%>
                                        </td>
                                        <td>
                                            â‚¹ <%=staff[i].salary%>
